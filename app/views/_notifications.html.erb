<section id="notifications">
  <% flash.each do |name, msg| %>
    <% if msg.is_a?(String) %>
      <div class="alert alert-<%= flash_name_to_bootstrap_alert(name) %>">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <%= content_tag :div, msg %>
      </div>
    <% end %>
  <% end %>
</section>
